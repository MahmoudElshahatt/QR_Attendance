<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".fragments.CreateQRFragment">

    <EditText
        android:id="@+id/et_attendant_name"
        style="@style/roundInputTextField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="20dp"
        android:hint="@string/type_a_name"
        android:inputType="textPersonName|textCapSentences"
        android:padding="12dp"
        android:textColor="@color/white"
        android:textColorHint="@color/tab_unselected_color" />

    <EditText
        android:id="@+id/et_attendant_notes"
        style="@style/roundInputTextField"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="20dp"
        android:gravity="start"
        android:hint="@string/notes"
        android:inputType="textCapSentences|textMultiLine"
        android:padding="12dp"
        android:textColor="@color/white"
        android:textColorHint="@color/tab_unselected_color" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_create_qr"
        style="@style/AppButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="24dp"
        android:foreground="?selectableItemBackground"
        android:text="@string/create_qr" />

    <ImageView
        android:id="@+id/img_QR"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_weight="1"
        android:padding="24dp"
        android:visibility="invisible"
        tools:src="@tools:sample/avatars" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_download_qr"
        style="@style/AppButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:foreground="?selectableItemBackground"
        android:text="@string/download_qr" />
</LinearLayout>